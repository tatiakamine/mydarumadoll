<div id="not_footer">
	<div id="main">
		<img class="center" id="daruma_doll" src="/assets/darumadoll.png"/>
		<h1>Dê um Daruma de presente <br/> pra quem você gosta!</h1>
		<%= form_for @daruma, :url => { :action => "create" }, :html => { :class => "center" } do |daruma_form| %>
			<label class="text_right">seu nome: <%= daruma_form.text_field :new_sender_name %></label>
			<label class="text_right">seu e-mail: <%= daruma_form.text_field :new_sender_email %></label>
			<label class="text_right">e-mail do presenteado: <%= daruma_form.text_field :new_user_email %></label>
			<input type="submit" value="Enviar Daruma" class="center"/> 
		<% end %>
	</div>
</div>
<div id="footer">
</div>